const Path = require('path');
const Webpack = require('webpack');
const Merge = require('webpack-merge');
const ConfOfVue = require('./conf.build.vue');

module.exports = Merge({
  entry: {
    <%= appname%>: Path.resolve(__dirname, './static/js/index.js'),
    common: ['vue']
  },
  output: {
    filename: '<%= appname%>/js/[name].[chunkhash:8].js',
    chunkFilename: '<%= appname%>/js/modules/[name].[chunkhash:8].js',
  },
  module: {
    rules: [{
      test: /\.scss$/,
      use: ['style-loader','css-loader','sass-loader']
    }, {
      test: /\.(png|jpe?g|gif|svg)(\?.*)?$/,
      loader: 'url-loader',
      options: {
        limit: 10000,
        name: '<%= appname%>/assets/img/[name].[hash:8].[ext]'
      }
    }, {
      test: /\.(woff2?|eot|ttf|otf)(\?.*)?$/,
      loader: 'url-loader',
      options: {
        limit: 10000,
        name: '<%= appname%>/assets/fonts/[name].[hash:7].[ext]'
      }
    }]
  },
  plugins: [
    new Webpack.optimize.CommonsChunkPlugin({
      name: 'common',
      filename: '<%= appname%>/js/common.[chunkhash:8].js'
    })
  ],
  resolve: {
    alias: {
      '@<%= appname%>': Path.resolve(__dirname,'./static')
    }
  }
},ConfOfVue());